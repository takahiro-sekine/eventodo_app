<!DOCTYPE html>
<html>
  <head>
    <title>EventTodo</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <header class = "wapper">
      <div class = "header">
        <%=link_to "Eventask", root_path, class: "navbar-brand" %>
        <ul class="navbrand-nav">
          <%if user_signed_in?%> 
            <li class="nav-item">
              <%=link_to "イベントを作る", new_event_path, class: :navlink %>
            </li>

            <li class="nav-item">
              <%=link_to "タスクを作る", new_task_path, class: :navlink %> 
            </li>

            <li class="nav-item">
              <%=link_to "タスクを見る", tasks_path, class: :navlink %>
            </li>

            <li class="nav-item">
              <%=link_to "ログアウト", destroy_user_session_path, class: :navlink, method: :delete %>
            </li>
          <%else%> 
            <li class="nav-item">
              <%=link_to "ログイン", new_user_session_path, class: :navlink, method: :post%>
            </li>
            <li class="nav-item">
              <%=link_to "新規登録", new_user_registration_path, class: :navlink %>
            </li>
          <%end%> 
      </div>
    </header>
    <%= yield %>
  </body>
</html>
