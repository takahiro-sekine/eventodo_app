<%= form_with(url: search_events_path, local: true, method: :get, class: "search-form") do |form| %>
  <%= form.text_field :keyword, placeholder: "投稿を検索する", class: "search-input" %>
  <%= form.submit "検索", class: "search-btn" %>
<% end %>
<h1>イベント一覧</h1>
  <div class="inner">
    <% if user_signed_in? %>
      <%# ログインしているときは以下を表示する %>
      <div class="greeting"> 
         こんにちは、
         <%= link_to "#{current_user.name}さん", "/users/#{current_user.id}", class: :greeting__link%>
      </div> 
      <%# // ログインしているときは上記を表示する %>
    <% end %>   
    <div class="list-group">
        <%= render partial: "shared/event", collection: @events %>
    </div>
  </div>